package com.university.lms.repository;

import com.university.lms.entity.User;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import java.util.List;
import java.util.Optional;

public interface UserRepository extends JpaRepository<User, Long> {
    List<User> findByRole(String role);

    @Query("SELECT u FROM User u LEFT JOIN FETCH u.enrolledCourses LEFT JOIN FETCH u.studyProgram WHERE u.role = :role")
    List<User> findByRoleWithEnrollments(@Param("role") String role);

    @Query("SELECT u FROM User u LEFT JOIN FETCH u.enrolledCourses LEFT JOIN FETCH u.studyProgram WHERE u.id = :id")
    Optional<User> findByIdWithEnrollments(@Param("id") Long id);
}