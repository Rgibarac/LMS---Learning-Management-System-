package com.university.lms.repository;

import com.university.lms.entity.EvaluationGradeDTO;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import java.util.List;

public interface EvaluationGradesRepository extends JpaRepository<EvaluationGradeDTO, EvaluationGradeId> {
    @Query("SELECT g FROM EvaluationGradeDTO g WHERE g.userId = :userId AND EXISTS " +
           "(SELECT e FROM Evaluation e WHERE e.id = g.evaluationId AND e.courseId = :courseId)")
    List<EvaluationGradeDTO> findByUserIdAndCourseId(Long userId, Long courseId);
}